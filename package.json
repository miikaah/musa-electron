{
  "name": "musa-electron",
  "productName": "Musa",
  "version": "4.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --watch ./src --ext ts --exec npm start",
    "start": "env-cmd -f .env.local electron index.js",
    "test": "jest --coverage",
    "test:w": "jest --coverage --watch",
    "build": "shx rm -rf dist && node esbuild.js && shx cp src/preload.js dist/ && shx cp package.json dist/",
    "tsc:w": "tsc --watch --noEmit",
    "package:mac": "electron-packager ./dist --overwrite --platform=darwin --arch=x64 --icon=assets/icons/musa1024x1024.icns --prune=true --out=release-builds",
    "pack:mac": "env-cmd bash pack.mac.sh",
    "package:win": "electron-packager ./dist --overwrite --platform=win32 --arch=x64 --icon=assets/icons/musa1024x1024.ico --prune=true --out=release-builds",
    "pack:win": "env-cmd pack.win.bat"
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write"
    ]
  },
  "author": "Miika Henttonen miika.henttonen@gmail.com",
  "repository": {
    "type": "git",
    "url": "git://github.com/miikaah/musa-electron.git"
  },
  "license": "MIT",
  "dependencies": {
    "@miikaah/musa-core": "8.1.1"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/lodash.uniqby": "^4.7.7",
    "@types/node": "^18.11.18",
    "@types/urlsafe-base64": "^1.0.28",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "electron": "^22.2.0",
    "electron-packager": "17.1.1",
    "env-cmd": "^10.1.0",
    "esbuild": "^0.17.5",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "2.0.20",
    "prettier": "^2.8.3",
    "prettier-plugin-organize-imports": "^3.2.2",
    "shx": "^0.3.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
