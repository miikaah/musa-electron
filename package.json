{
  "name": "musa-electron",
  "productName": "Musa",
  "version": "2.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "setup": "npm i && electron-rebuild",
    "dev": "nodemon --watch ./src --exec npm start",
    "start": "npm run build && env-cmd -f .env.local electron ./dist/index.js",
    "test": "jest --coverage",
    "test:w": "jest --coverage --watch",
    "build": "tsc && cp ./{package.json,package-lock.json} dist/ && cd dist && npm ci --prod; cd ..",
    "tsc:w": "tsc --watch --noEmit",
    "package:mac": "electron-packager ./dist --overwrite --platform=darwin --arch=x64 --icon=assets/icons/musa1024x1024.icns --prune=true --out=release-builds",
    "pack:mac": "env-cmd bash pack.mac.sh",
    "package:win": "electron-packager ./dist --overwrite --platform=win32 --arch=x64 --icon=assets/icons/musa1024x1024.ico --prune=true --out=release-builds",
    "pack:win": "env-cmd pack.win.bat",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write"
    ]
  },
  "author": "Miika Henttonen miika.henttonen@gmail.com",
  "repository": {
    "type": "git",
    "url": "git://github.com/miikaah/musa-electron.git"
  },
  "license": "MIT",
  "dependencies": {
    "fuzzysort": "^1.1.4",
    "musa-core": "git@github.com:miikaah/musa-core.git#v1.2.0",
    "nedb": "^1.8.0"
  },
  "devDependencies": {
    "@types/nedb": "^1.8.12",
    "@types/node": "^16.10.3",
    "@types/urlsafe-base64": "^1.0.28",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "electron": "^15.0.0",
    "electron-packager": "15.4.0",
    "electron-rebuild": "3.2.3",
    "env-cmd": "^10.1.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.2",
    "lint-staged": "^11.1.2",
    "nodemon": "2.0.7",
    "prettier": "^2.4.1",
    "typescript": "^4.4.3"
  }
}
