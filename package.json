{
  "name": "musa-electron",
  "productName": "Musa",
  "version": "3.3.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "setup": "npm i && electron-rebuild",
    "dev": "nodemon --watch ./src --ext ts --exec npm start",
    "start": "env-cmd -f .env.local electron index.js",
    "test": "jest --coverage",
    "test:w": "jest --coverage --watch",
    "build": "tsc --project tsconfig.build.json && shx cp ./{package.json,package-lock.json} dist/ && cd dist && npm ci --prod",
    "tsc:w": "tsc --watch --noEmit",
    "package:mac": "electron-packager ./dist --overwrite --platform=darwin --arch=x64 --icon=assets/icons/musa1024x1024.icns --prune=true --out=release-builds",
    "pack:mac": "env-cmd bash pack.mac.sh",
    "package:win": "electron-packager ./dist --overwrite --platform=win32 --arch=x64 --icon=assets/icons/musa1024x1024.ico --prune=true --out=release-builds",
    "pack:win": "env-cmd pack.win.bat",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write"
    ]
  },
  "author": "Miika Henttonen miika.henttonen@gmail.com",
  "repository": {
    "type": "git",
    "url": "git://github.com/miikaah/musa-electron.git"
  },
  "license": "MIT",
  "dependencies": {
    "musa-core": "git@github.com:miikaah/musa-core.git#v3.2.1"
  },
  "devDependencies": {
    "@types/nedb": "^1.8.12",
    "@types/node": "^16.11.6",
    "@types/urlsafe-base64": "^1.0.28",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "electron": "^15.3.5",
    "electron-packager": "15.4.0",
    "env-cmd": "^10.1.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.5",
    "lint-staged": "^11.2.6",
    "nodemon": "2.0.14",
    "prettier": "^2.5.1",
    "shx": "^0.3.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
