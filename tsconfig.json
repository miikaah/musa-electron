{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "target": "es2022",
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true
  },
  "include": ["./src/**/*.ts"]
}
